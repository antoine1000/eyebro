body {
  margin 0
  background yellow
  font-family 'Roboto', sans-serif
  color red
}

.debug
    display none
  video#webcam
    position absolute
  #debug
    position absolute


section.screen {
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  text-align center

  visiblity hidden
  opacity 0
  transform: translateY(-50%);
  &.show {
    easing(500)
    z-index 2
    opacity 1
    visiblity visible
    transform: translateY(0%);
  }


  .logo {
    position fixed
    top 2vw
    left 2vw
    width 10vw
  }

  .score {
    position fixed
    top 2vw
    right 2vw
    text-align right
  }

  .error {
    display none
    letter-spacing 0.125em
    font-size smaller
  }

  .wrapper {
    position absolute
    top 50%
    left 50%
    width 100%
    transform translateX(-50%) translateY(-50%)

    h1 {
      easing(300)
      font-family 'Roboto', sans-serif
      font-style italic
      font-size 10vw
      width 70%
      margin 0 auto
      color red
    }

    h2 {
      easing(300)
      margin 0
      letter-spacing 0.125em
    }

    button {
      easing(300)
      display inline-block
      margin-top 10vw
      margin-right 2vw
      position relative
      background none
      outline none
      font-family 'Roboto', sans-serif
      color blue
      font-size 5vw

      border none
      &::before {
        z-index -1
        easing(300)
        content ""
        position absolute
        width 100%
        height 100%
        // top -52%
        top -10%
        left 50%
        opacity 0
        border-bottom 10px solid red
      }

      &:hover {
        cursor pointer
        &::before {
          left 0
          opacity 1
        }
      }
    }

    a.btn {
      display inline-block
      width 10vw
      height 10vw
      svg {
        easing(300)
        fill blue
        width 100%
        height 100%
      }

      &:hover {
        svg {
          fill red
        }
      }
    }
  }
}


section.screen#welcome.error {
  .error {
    display block
  }
  button {
    display none
  }
}

footer {
  z-index 2
  position fixed
  bottom 2vw
  right 2vw
}